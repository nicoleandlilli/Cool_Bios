<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    android:padding="5dp"
    android:background="#F1FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

<!--            <EditText-->
<!--                android:text="I'm the Content "-->
<!--                android:id="@+id/tv_content"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="I M UNIQE"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:gravity="center|left"-->
<!--                android:background="@null"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"/>-->

        </LinearLayout>

        
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintLeft_toLeftOf="@id/lv_content"
            app:layout_constraintRight_toRightOf="@id/lv_content"
            app:layout_constraintTop_toBottomOf="@id/lv_content">

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorite"
                android:layout_marginLeft="30dp"
                app:layout_constraintLeft_toLeftOf="@id/cv_bottom"
                app:layout_constraintTop_toTopOf="@id/cv_bottom"
                app:layout_constraintBottom_toBottomOf="@id/cv_bottom"/>

            <TextView
                android:text="551"
                android:id="@+id/tv_favorite_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:layout_constraintLeft_toRightOf="@id/iv_favorite"
                app:layout_constraintTop_toTopOf="@id/cv_bottom"
                app:layout_constraintBottom_toBottomOf="@id/cv_bottom"/>

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toRightOf= "@id/cv_bottom"
                app:layout_constraintTop_toTopOf="@id/cv_bottom"
                app:layout_constraintBottom_toBottomOf="@id/cv_bottom"/>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_share"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toLeftOf="@id/iv_edit"
                app:layout_constraintTop_toTopOf="@id/cv_bottom"
                app:layout_constraintBottom_toBottomOf="@id/cv_bottom"/>

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_preview"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toLeftOf="@id/iv_share"
                app:layout_constraintTop_toTopOf="@id/cv_bottom"
                app:layout_constraintBottom_toBottomOf="@id/cv_bottom"/>

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_copy"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toLeftOf="@id/iv_preview"
                app:layout_constraintTop_toTopOf="@id/cv_bottom"
                app:layout_constraintBottom_toBottomOf="@id/cv_bottom"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>

